#!/bin/bash
# speak2type IBus engine launcher
cd "/home/igor/Documents/code/speak2type"
source .venv/bin/activate

# Set GSettings schema directory for user-installed schemas
export GSETTINGS_SCHEMA_DIR="${HOME}/.local/share/glib-2.0/schemas:${GSETTINGS_SCHEMA_DIR:-}"

exec python -m speak2type.engine "$@"
